@model Schedule.Data.Models.Lesson

@{
    ViewData["Title"] = "Удаление занятия";
}

<h1>Удалить занятие</h1>

<h3>Вы уверены, что хотите удалить это занятие?</h3>
<div>
    <p><strong>Преподаватель:</strong> @Model.Teacher.Name</p>
    <p><strong>Предмет:</strong> @Model.Subject.Name</p>
    <p><strong>Аудитория:</strong> @Model.Classroom.RoomNumber</p>
    <p><strong>Группы:</strong> @string.Join(", ", Model.LessonGroups.Select(g => g.Group.Name))</p>
    <p><strong>Время:</strong> @Model.StartTime.ToString("dd.MM.yyyy HH:mm") - @Model.EndTime.ToString("HH:mm")</p>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Назад</a>
</form>
