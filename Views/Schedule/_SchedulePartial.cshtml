@model IEnumerable<Schedule.Data.Models.Lesson>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Расписание не найдено.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Время начала</th>
                <th>Время окончания</th>
                <th>Аудитория</th>
                <th>Преподаватель</th>
                <th>Предмет</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lesson in Model)
            {
                <tr>
                    <td>@lesson.StartTime.ToString("HH:mm")</td>
                    <td>@lesson.EndTime.ToString("HH:mm")</td>
                    <td>@(lesson.Classroom != null ? lesson.Classroom.RoomNumber : "N/A")</td>
                    <td>@(lesson.Teacher != null ? lesson.Teacher.Name : "N/A")</td>
                    <td>@(lesson.Subject != null ? lesson.Subject.Name : "N/A")</td>
                </tr>
            }
        </tbody>
    </table>
}
