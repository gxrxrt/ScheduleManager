@model IEnumerable<Schedule.Data.Models.Group>

@{
    ViewData["Title"] = "Группы";
}

<h1>Группы</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Добавить группу</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Курс</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr>
                <td>@group.Name</td>
                <td>@group.Course</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = group.Id })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = group.Id })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
