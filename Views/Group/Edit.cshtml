@model Schedule.Data.Models.Group

@{
    ViewData["Title"] = "Редактирование группы";
}

<h1>Редактирование группы</h1>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <h2>Название группы</h2>
        <label asp-for="Name" class="control-label"></label>
        <input name = "Name" asp-for="Name" class="form-control" value="@Model.Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <h2>Курс</h2>
        <label asp-for="Course" class="control-label"></label>
        <input name = "Course" asp-for="Course" class="form-control" value="@Model.Course"/>
        <span asp-validation-for="Course" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<a href="@Url.Action("Index")">Назад</a>
