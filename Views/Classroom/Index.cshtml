@model IEnumerable<Schedule.Data.Models.Classroom>

@{
    ViewData["Title"] = "Аудитории";
}

<h1>Аудитории</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Добавить аудиторию</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Номер/Название</th>
            <th>Вместимость</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var classroom in Model)
        {
            <tr>
                <td>@classroom.RoomNumber</td>
                <td>@classroom.Capacity</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = classroom.Id })" class="btn btn-warning">Редактировать</a>
                    <a href="@Url.Action("Delete", new { id = classroom.Id })" class="btn btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
