@model Schedule.Data.Models.Classroom

@{
    ViewData["Title"] = "Удаление аудитории";
}

<h1>Удаление аудитории</h1>

<h3>Вы уверены, что хотите удалить аудиторию: @Model.RoomNumber?</h3>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Отмена</a>
</form>
